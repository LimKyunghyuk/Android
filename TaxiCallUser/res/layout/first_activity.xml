<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#F0F8FF">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:background="#F0F8FF" android:gravity="center_horizontal">
		<ImageView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:src="@drawable/safegoome" />
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:gravity="center_horizontal|center_vertical">
			<ImageView android:id="@+id/SMS_btn" android:layout_width="wrap_content"
				android:paddingTop="20dip" android:layout_height="wrap_content" android:src="@drawable/sms_btn" />
			<ImageView android:id="@+id/SOS_btn" android:layout_width="wrap_content"
				android:paddingTop="20dip" android:layout_height="wrap_content" android:src="@drawable/sos_btn" />
			<FrameLayout android:layout_height="wrap_content"
				android:layout_width="wrap_content">
				<ImageView android:layout_width="wrap_content"
					android:paddingTop="20dip" android:visibility="visible" android:layout_height="wrap_content"
					android:id="@+id/up_on_btn" android:src="@drawable/update_on_btn" />
				<ImageView android:id="@+id/up_off_btn"
					android:paddingTop="20dip" android:visibility="invisible" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:src="@drawable/update_off_btn" />
			</FrameLayout>

		</LinearLayout>
		<ImageView android:id="@+id/Map_view_btn"
		android:paddingTop="30dip"
			android:layout_width="260dip" android:layout_height="wrap_content"
			android:src="@drawable/get_btn" android:gravity="bottom" />

	</LinearLayout>
</FrameLayout>