<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:gravity="center_vertical" android:background="#fff">

	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/imgTaxiListType"
		android:src="@drawable/taxi_type0" android:layout_gravity="left" android:paddingLeft="10dip" android:paddingRight="10dip" android:paddingBottom="15dip" android:paddingTop="15dip"></ImageView>
	<LinearLayout android:layout_width="wrap_content"
		android:orientation="horizontal" android:layout_weight="1"
		android:layout_height="fill_parent" android:gravity="center_vertical">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@style/TextDefaultBlack"
			android:id="@+id/txtTaxiListDistance" android:text="Distance"
			android:textSize="15dip" android:layout_gravity="left|center_vertical"></TextView>
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/star1"
				android:src="@drawable/star1" android:layout_gravity="right|center_vertical" android:paddingLeft="3dip"/>
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="0">
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/img_next"
			android:padding="5dip" android:layout_gravity="right|center_vertical"></ImageView>
	</LinearLayout>
</LinearLayout>
